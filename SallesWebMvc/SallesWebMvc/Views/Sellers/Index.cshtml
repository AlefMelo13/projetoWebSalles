@model IEnumerable<SallesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar</a>
</p>

<table width="100%" class="table table-striped table-hover">
    <thead>
        <tr class = "btn-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-info" style="margin:auto" asp-route-id = " @item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-outline-warning" style="margin:auto" asp-route-id = " @item.Id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-outline-danger" style="margin:auto" asp-route-id = " @item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>

</table>