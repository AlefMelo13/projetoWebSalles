@model SallesWebMvc.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<h1>Deseja realmente excluir?</h1>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
