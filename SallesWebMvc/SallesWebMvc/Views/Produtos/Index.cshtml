@model IEnumerable<SallesWebMvc.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar</a>
</p>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SearchById">
            <legend>Pesquisa</legend>
            <div class="input-group-sm mb-3">
                <input name="id" class="form-control" placeholder="Descrição do Produto" aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Buscar</button>
            </div>
        </form>
    </div>
</div>

<table class="table  table-striped table-hover text-align:center">
    <thead>
        <tr class="btn-info">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodBarras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <font size="4">
                        @Html.DisplayFor(modelItem => item.Id)
                    </font>
                </td>
                <td>
                    <font size="4">
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </font>
                </td>
                <td>
                    <font size="4">
                        @Html.DisplayFor(modelItem => item.Unidade)
                    </font>
                </td>
                <td>
                    <font size="4">
                        @Html.DisplayFor(modelItem => item.CodBarras)
                    </font>
                </td>
                <td>
                    <font size="4">
                        @Html.DisplayFor(modelItem => item.Preco)
                    </font>
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-info" style="margin:auto" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-outline-warning" style="margin:auto" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-outline-danger" style="margin:auto" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>

</table>