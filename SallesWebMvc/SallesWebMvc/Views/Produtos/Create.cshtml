@model SallesWebMvc.Models.ViewModels.ProdutoFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de Produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Marca" class="control-label"></label>
                <input asp-for="Produto.Marca" class="form-control" />
                <span asp-validation-for="Produto.Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Unidade" class="control-label"></label>
                <input asp-for="Produto.Unidade" class="form-control" />
                <span asp-validation-for="Produto.Unidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.CodBarras" class="control-label"></label>
                <input asp-for="Produto.CodBarras" class="form-control" />
                <span asp-validation-for="Produto.CodBarras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
